<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12sp">


    <ImageView
        android:id="@+id/transaction_icon_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_monetization_on_48" />

    <TextView
        android:id="@+id/transaction_entry_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Weekly Check"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/transaction_icon_iv"
        app:layout_constraintTop_toTopOf="@+id/transaction_icon_iv" />

    <TextView
        android:id="@+id/transaction_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="9/12/13"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/transaction_icon_iv"
        app:layout_constraintTop_toBottomOf="@+id/transaction_entry_tv" />

    <TextView
        android:id="@+id/transaction_type_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="New Income"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/transaction_amount_tv"
        app:layout_constraintEnd_toEndOf="@+id/transaction_amount_tv"
        app:layout_constraintStart_toStartOf="@+id/transaction_amount_tv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/transaction_amount_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="24dp"
        android:text="$2000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/transaction_type_tv" />
</androidx.constraintlayout.widget.ConstraintLayout>